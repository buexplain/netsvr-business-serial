{
  "name": "buexplain/netsvr-business-serial",
  "description": "这是一个可以快速开发websocket单工通信业务的包，它必须在串行的php程序中工作，它基于https://github.com/buexplain/netsvr进行工作。",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "buexplain",
      "email": "buexplain@qq.com"
    }
  ],
  "keywords": [
    "php",
    "websocket",
    "netsvr"
  ],
  "require": {
    "php": ">=8.0",
    "buexplain/netsvr-protocol-php": "^v1.2.0",
    "psr/container": "^1.0|^2.0",
    "ext-sockets": "*"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "NetsvrBusiness\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NetsvrBusinessTest\\": "tests/"
    }
  },
  "require-dev": {
    "google/protobuf": "^3.22",
    "phpunit/phpunit": "^10.2",
    "textalk/websocket": "^1.5"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml --colors=always"
  }
}
